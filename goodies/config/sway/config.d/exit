# Exit sway
mode "Exit" {
    bindsym l exec swaymsg exit
    bindsym n mode "default"; exec pkill -15 nagbar; exec $lock; exec loginctl suspend
    bindsym r exec loginctl reboot
    bindsym s exec loginctl poweroff
    bindsym h mode "default"; exec pkill -15 nagbar; exec $lock; exec loginctl hibernate
    bindsym e mode "default"; exec pkill -15 nagbar
    bindsym Escape mode "default"; exec pkill -15 nagbar
}

bindsym $mod+Shift+e mode "Exit"; exec swaynag \
          -t warning \
          -m 'SESSION EXIT OPTIONS' \
          -B '[L]ogout' 	'swaymsg exit' \
          -B '[N]ap' 	'$lock && systemctl suspend' \
          -B '[R]estart'	'loginctl reboot' \
          -B '[S]hutdown'	'loginctl poweroff' \
          -B '[H]ibernate'	'$lock && systemctl hibernate' 

