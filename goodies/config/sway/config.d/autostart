# startup polkit, xdg, daemons
exec /usr/bin/dbus-update-activation-environment --all
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec ${HOME}/.config/sway/scripts/startXDG.sh
exec /usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh
exec_always "killall -q wl-clip-persist; wl-clip-persist --clipboard regular"
exec pipewire
exec mako
exec_always 'killall -q waybar; waybar'
exec copyq --start-server
exec brightnessctl s 50%

# Network Manager applet
exec --no-startup-id nm-applet --indicator
# battery
#exec xfce4-power-manager --daemon
# blueman
exec blueman-applet
# easyeffects
exec_always easyeffects --gapplication-service
